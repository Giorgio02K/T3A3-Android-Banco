<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        style="@style/Widget.Material3.BottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:backgroundTint="@color/text_color_black"
        app:fabAlignmentMode="center"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:navigationIcon="@drawable/ic_menu"
        tools:ignore="BottomAppBar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:contentDescription="AcciÃ³n principal"
        android:src="@drawable/bank_icon_5"
        app:layout_anchor="@id/bottomAppBar"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/bottomAppBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="30dp"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bienvenida_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/text_color_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/user_icon" />

            <TextView
                android:id="@+id/bienvenido_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="@string/welcome_bank"
                android:textColor="@color/text_color_black"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <GridLayout
        android:id="@+id/grid_botones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:layout_marginTop="15dp"
        android:columnCount="2"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/bienvenida_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/salir">

        <Button
            android:id="@+id/posicion_global"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="20dp"
            android:text="@string/posicion_global"
            android:textSize="18sp"
            android:fontFamily="@font/inter_medium"
            android:padding="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/cambiar_contrasena"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="20dp"
            android:text="@string/cambiar_contrasena"
            android:textSize="18sp"
            android:fontFamily="@font/inter_medium"
            android:padding="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/movimientos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="5dp"
            android:text="@string/movimientos"
            android:textSize="18sp"
            android:fontFamily="@font/inter_medium"
            android:padding="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/promociones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_marginTop="5dp"
            android:text="@string/promociones"
            android:textSize="18sp"
            android:fontFamily="@font/inter_medium"
            android:padding="10dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/transferencias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/transferencias"
            android:textSize="18sp"
            android:fontFamily="@font/inter_medium"
            android:padding="10dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/cajeros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/cajeros"
            android:textSize="18sp"
            android:fontFamily="@font/inter_medium"
            android:padding="10dp"
            android:gravity="center"/>

    </GridLayout>


    <Button
        android:id="@+id/salir"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/fab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>